{
    "name": "Codespace for Local Development Environment",
    "dockerComposeFile": "docker-compose.yml",
    "service": "php",
    "forwardPorts": [8080, 8081, 8082],
    "portsAttributes": {
        "8080": {
            "label": "Application"
        },
        "8081": {
            "label": "phpMyAdmin"
        },
        "8082": {
            "label": "MailHog"
        }
    },
    "containerEnv": {
        "XDEBUG": "disable"
    },
    "remoteEnv": {
        "ENABLE_ELASTICSEARCH": "",
        "ENABLE_MAILHOG": "true",
        "MULTISITE": ""
    },
    "updateContentCommand": "cd /workspaces/${localWorkspaceFolderBasename} && composer install || true",
    "postCreateCommand": "/usr/local/bin/setup.sh",
    "workspaceFolder": "/wp/wp-content",
    "remoteUser": "root"
}
