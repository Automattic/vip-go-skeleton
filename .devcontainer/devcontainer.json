{
    "name": "Codespace for Local Development Environment",
    "dockerComposeFile": "docker-compose.yml",
    "service": "php",
    "forwardPorts": ["nginx:80", "phpmyadmin:80", "mailhog:80"],
    "portsAttributes": {
        "nginx:80": {
            "label": "Application"
        },
        "phpmyadmin:80": {
            "label": "phpMyAdmin"
        },
        "mailhog:80": {
            "label": "MailHog"
        },
        "php:9000": {
            "label": "PHP-FPM",
            "onAutoForward": "ignore"
        }
    },
    "containerEnv": {
        "XDEBUG": "disable"
    },
    "remoteEnv": {
        "ENABLE_ELASTICSEARCH": "",
        "ENABLE_MAILHOG": "true",
        "MULTISITE": ""
    },
    "initializeCommand": "echo \"HOST_UID=$(id -u)\nHOST_GID=$(id -g)\" > .devcontainer/.env",
    "updateContentCommand": {
        "composer": "composer install --no-interaction"
    },
    "postCreateCommand": {
        "install": ["/bin/sh", "-x", "/dev-tools/setup.sh", "database", "root", "http://test.vipdev.lndo.site/", "Test"]
    },
    "workspaceFolder": "/wp/wp-content",
    "remoteUser": "www-data",
    "hostRequirements": {
        "memory": "8gb"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dlech.chmod",
                "dbaeumer.vscode-eslint",
                "bmewburn.vscode-intelephense-client",
                "wongjn.php-sniffer",
                "esbenp.prettier-vscode",
                "MehediDracula.php-namespace-resolver",
                "johnbillion.vscode-wordpress-hooks"
            ]
        }
    }
}
