{
    "name": "Codespace for Local Development Environment",
    "dockerComposeFile": "docker-compose.yml",
    "overrideCommand": false,
    "userEnvProbe": "none",
    "service": "php",
    "forwardPorts": ["nginx:80"],
    "portsAttributes": {
        "nginx:80": {
            "label": "Application"
        },
        "php:9000": {
            "label": "PHP-FPM",
            "onAutoForward": "ignore"
        }
    },
    "containerEnv": {
        "XDEBUG": "disable"
    },
    "remoteEnv": {
        "ENABLE_ELASTICSEARCH": "",
        "ENABLE_MAILHOG": "",
        "MULTISITE": ""
    },
    "initializeCommand": "echo \"HOST_UID=$(id -u)\nHOST_GID=$(id -g)\" > .devcontainer/.env",
    "workspaceFolder": "/wp/wp-content",
    "remoteUser": "www-data"
}
