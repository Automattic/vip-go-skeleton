{
    "name": "Codespace for Local Development Environment",
    "dockerComposeFile": "docker-compose.yml",
    "overrideCommand": false,
    "userEnvProbe": "none",
    "service": "php",
    "forwardPorts": [8080, 8081, 8082],
    "portsAttributes": {
        "8080": {
            "label": "Application"
        },
        "8081": {
            "label": "phpMyAdmin"
        },
        "8082": {
            "label": "MailHog"
        },
        "php:9000": {
            "label": "PHP-FPM",
            "onAutoForward": "ignore"
        }
    },
    "containerEnv": {
        "XDEBUG": "disable"
    },
    "remoteEnv": {
        "ENABLE_ELASTICSEARCH": "",
        "ENABLE_MAILHOG": "true",
        "MULTISITE": ""
    },
    "initializeCommand": "echo \"HOST_UID=$(id -u)\nHOST_GID=$(id -g)\" > .devcontainer/.env",
    "updateContentCommand": {
        "composer": "composer install --no-interaction"
    },
    "postCreateCommand": {
        "install": "/usr/local/setup.sh"
    },
    "workspaceFolder": "/wp/wp-content",
    "remoteUser": "www-data",
    "customizations": {
        "vscode": {
            "extensions": [
                "dlech.chmod",
                "dbaeumer.vscode-eslint",
                "bmewburn.vscode-intelephense-client",
                "wongjn.php-sniffer",
                "esbenp.prettier-vscode",
                "MehediDracula.php-namespace-resolver",
                "johnbillion.vscode-wordpress-hooks"
            ]
        }
    }
}
